generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model VipUser {
  id          Int      @id @default(autoincrement())
  telegramId  BigInt   @unique
  username    String?
  isActive    Boolean  @default(true)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
}

model MlAuth {
  id           Int      @id @default(autoincrement())
  mlUserId     BigInt   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}
